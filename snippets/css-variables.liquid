{%- style -%}
  :root {
    --typeHeaderPrimary: "Noto Serif KR";
    --typeHeaderFallback: serif;
    --typeHeaderStyle: normal;
    --typeHeaderWeight: 600;
    --typeBasePrimary:'Quicksand';
    --typeBaseFallback: sans-serif;
    --typeBaseWeight: 400;
    --typeBaseStyle: normal;

    --colorDark: #29333f;
    --colorMain: #565e68;
    --colorRed: #ff5151;
    --colorGray: #d4d4d4;
    --colorWhite: #ffffff;
    --colorGreen: #41c375;
    --colorBlue: #06b5ce;

    --colorBtnPrimary:{{ settings.color_button | default: "#000" }};
    --colorBtnPrimaryText:{{ settings.color_button_text | default: "#fff" }};
    --colorBtnPrimaryBgTransition:background 0.15s ease;
    --colorBtnPrimaryActive:{{ settings.color_button | default: "#000" | color_lighten: 20 }};
    --colorCartDot:{{ settings.color_cart_dot | default: "#ff4f33" }};
    --colorCartDotText:{{ settings.color_cart_dot_text | default: "#fff" }};

    --colorLink:{{ settings.color_body_text | default: "#1c1d1d" }};

    --colorTextBody:{{ settings.color_body_text | default: "#1c1d1d" }};
    --colorSalePrice:{{ settings.color_sale_price | default: "#1c1d1d" }};
    --colorSaleTag:{{ settings.color_sale_tag | default: "#1c1d1d" }};
    --colorSaleTagText:{{ settings.color_sale_tag_text | default: "#ffffff" }};

    --colorBody:{{ settings.color_body_bg | default: "#fff" }};
    --colorBodyDim:{{ settings.color_body_bg | default: "#fff" | color_darken: 5 }};
    --colorInputBg:{{ settings.color_body_bg | default: "#1c1d1d" }};

    --colorAlt:{{ settings.color_alt_bg | default: "#f4f4f4" }};
    --colorAltText:{{ settings.color_alt_text | default: "#000" }};

    --colorNav:{{ settings.color_body_bg | default: "#fff" }};
    --colorNavText:{{ settings.color_nav_text | default: "#000" }};
    --colorAnnouncement:{{ settings.color_announcement | default: "#1c1d1d" }};
    --colorAnnouncementText:{{ settings.color_announcement_text | default: "#fff" }};

    --colorNewsletter:{{ settings.color_newsletter | default: "#1c1d1d" }};
    --colorNewsletterText:{{ settings.color_newsletter_text | default: "#fff" }};

    --colorHeroText:{{ settings.color_image_text | default: "#fff" }};

    --colorSmallImageBg:{{ settings.color_small_image_bg | default: "#eee" }};
    --colorLargeImageBg:{{ settings.color_large_image_bg | default: "#1c1d1d" }};

    --colorImageOverlay:{{ settings.color_image_overlay | default: "#000" }};
    --colorImageOverlayOpacity:{{ settings.color_image_overlay_opacity | divided_by: 100.0 }};
    --colorImageOverlayTextShadow:{{ settings.color_image_overlay_text_shadow | divided_by: 100.0 }};

    --colorDrawers:{{ settings.color_drawer_background | default: "#1c1d1d" }};
    --colorDrawersDim:{{ settings.color_drawer_background | default: "#1c1d1d" | color_darken: 5 }};
    --colorDrawerText:{{ settings.color_drawer_text | default: "#fff" }};
    --colorDrawerTextDarken:{{ settings.color_drawer_text | default: "#fff" | color_darken: 15 }};
    --color-black: #000000;
    --color-white: #ffffff;
    --color-dark: {{ settings.color_heading_text }};
    --color-main: {{ settings.color_body_text }};
    --typeHeaderSize: {{ settings.type_header_base_size | default: 32 | append: 'px' }};
    --typeHeaderLineHeight: {{ settings.type_header_line_height | default: 1.4 }};
    --typeHeaderSpacing: {{ settings.type_header_spacing | default: '25' | divided_by: 1000.00 | append: 'em' }};

    --typeBaseSize: {{ settings.type_base_size | default: 16 | append: 'px' }};
    --typeBaseSpacing: {{ settings.type_base_spacing | default: '50' | divided_by: 1000.00 | append: 'em' }};
    --typeBaseLineHeight: {{ settings.type_base_line_height | default: 1.6 }};

    {% if settings.button_style == 'round-slight' %}
      --buttonRadius: 3px;
    {% elsif settings.button_style == 'round' %}
      --buttonRadius: 35px;
    {% else %}
      --buttonRadius: 0px;
    {% endif %}

    --iconWeight: {{ settings.icon_weight | default: '5px' }};
    --iconLinecaps: {{ settings.icon_linecaps | default: 'miter' }};
  }

  {% if settings.color_cart_dot == settings.color_button %}
    .site-nav__thumb-cart {
      border-left: 1px solid rgba(255,255,255,0.3);
    }
  {% endif %}

  .hero {
    background-image: linear-gradient(100deg, {{ settings.color_large_image_bg }} 40%, {{ settings.color_large_image_bg | color_lighten: 13 }} 63%, {{ settings.color_large_image_bg }} 79%);
  }

  .placeholder-content,
  .image-wrap,
  .skrim__link,
  .pswp__img--placeholder {
    background-image: linear-gradient(100deg, {{ settings.color_small_image_bg }} 40%, {{ settings.color_small_image_bg | color_darken:
    3 }} 63%, {{ settings.color_small_image_bg }} 79%);
  }
{%- endstyle -%}
